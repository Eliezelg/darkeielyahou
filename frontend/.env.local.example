# URL de l'API backend
NEXT_PUBLIC_API_URL=http://localhost:3001

# URL du site (utilisée pour les liens absolus)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Clé secrète pour les sessions (générer avec `openssl rand -base64 32`)
NEXTAUTH_SECRET=your-secret-key-here

# URL de base pour les liens d'authentification
NEXTAUTH_URL=http://localhost:3000

# Configuration de la base de données (si nécessaire)
# DATABASE_URL=postgresql://user:password@localhost:5432/darkei_elyahou

# Configuration SendGrid pour l'envoi d'emails
# SENDGRID_API_KEY=your-sendgrid-api-key
# EMAIL_FROM=noreply@darkei-elyahou.com

# Configuration Google Analytics (optionnel)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
